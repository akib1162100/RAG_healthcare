# Environment Configuration for RAG Healthcare System

# Odoo Database (source data)
ODOO_DB_HOST=localhost
ODOO_DB_PORT=5432
ODOO_DB_NAME=odoo
ODOO_DB_USER=odoo
ODOO_DB_PASSWORD=odoo

# RAG Database (vector storage) - can be same as Odoo DB
DATABASE_URL=postgresql+asyncpg://odoo:odoo@localhost:5432/odoo

# LLM Configuration (Legacy - Ollama)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3

# Google Gemma API Configuration (NEW - Primary LLM)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL_NAME=gemini-1.5-flash

# Embedding Model Configuration
EMBEDDING_MODEL=emilyalsentzer/Bio_ClinicalBERT
EMBEDDING_DIM=768

# Alternative embedding models:
# EMBEDDING_MODEL=pritamdeka/S-PubMedBert-MS-MARCO
# EMBEDDING_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract
# EMBEDDING_MODEL=BAAI/bge-m3
# EMBEDDING_DIM=1024  # For BGE-M3

# ETL Pipeline Configuration
ETL_BATCH_SIZE=32
ETL_CHUNK_SIZE=800
ETL_CHUNK_OVERLAP=150

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
