<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.gemini</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <div class="app_settings_block" data-string="Gemini AI" data-key="google_ai_studio" string="Gemini AI">
                    <h2>Gemini AI Integration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_gemini"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_gemini" string="Enable Gemini Integration"/>
                                <div class="text-muted">
                                    Enable Gemini AI integration in discussions
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" invisible="not enable_gemini_integration">
                            <div class="o_setting_left_pane">
                                <field name="gemini_api_key" password="True"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="gemini_api_key" string="API Key"/>
                                <div class="text-muted">
                                    Enter your Google Gemini API Key
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" invisible="not enable_gemini_integration">
                            <div class="o_setting_left_pane">
                                <field name="gemini_model"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="gemini_model" string="Model"/>
                                <div class="text-muted">
                                    Select the Gemini model to use
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" invisible="not enable_gemini_integration">
                            <div class="o_setting_left_pane">
                                <field name="max_context_messages"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="max_context_messages" string="Context Messages"/>
                                <div class="text-muted">
                                    Maximum number of previous messages to include as context
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>