<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="custom_pos_config_extended_form_view">
            <field name="name">pos.config.form.extended.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[4]" position="after">
                    <h2 name="order">Prescription</h2>
                    <div class="row mt16 o_settings_container">
                        <div id="check_prescription_knk" class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="check_prescription_knk" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="check_prescription_knk" string='Import Prescription' />
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="pos_prescription_knk" string="Create Prescription" />
                                <field name="pos_prescription_knk" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>