<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="prescription_pivot_view" model="ir.ui.view">
        <field name="name">prescription.pivot.view</field>
        <field name="model">prescription.order.report</field>
        <field name="arch" type="xml">
            <pivot string="Prescription Pivot" disable_linking="True">
                <field name="complaint" type="col" />
                <field name="patient_id" type="row" />
            </pivot>
        </field>
    </record>
    <record id="action_prescription_order_report_all" model="ir.actions.act_window">
        <field name="name">Patient Analysis</field>
        <field name="res_model">prescription.order.report</field>
        <field name="view_mode">pivot</field>
        <field name="help">This report performs analysis on your Patient complaints and his/her medical history and what kind of diet is given or excercises to do.</field>
    </record>
</odoo>