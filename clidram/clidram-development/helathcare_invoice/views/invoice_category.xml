<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="invoice_category_tree_view" model="ir.ui.view">
        <field name="name">invoice.category.view.tree</field>
        <field name="model">invoice.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_invoice_category" model="ir.actions.act_window">
        <field name="name">Invoice Categories</field>
        <field name="res_model">invoice.category</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="invoice_category_menu" name="Invoice Category"
              action="action_invoice_category"
              parent="account.menu_finance_configuration" sequence="30"/>
</odoo>