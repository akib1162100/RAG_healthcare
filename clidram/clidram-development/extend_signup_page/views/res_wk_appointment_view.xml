<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="wk_appointment_form_inherit" model="ir.ui.view">
            <field name="name">Appointment Form</field>
            <field name="model">wk.appointment</field>
            <field name="inherit_id" ref="wk_appointment.appoint_mgmt_book_appointment_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='button_set_to_pending'][2]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('appoint_state', 'in',['pending','approved', 'in_consultation', 'rejected','done']),('id','=',False)]}</attribute>
                </xpath>

                <xpath expr="//header/button[@name='button_approve_appoint']" position="attributes">
                    <attribute name="attrs">{'invisible': ['|',('appoint_state', 'in',['approved', 'in_consultation', 'rejected','done']),('id','=',False)]}</attribute>
                </xpath>

                <xpath expr="//header/button[@name='button_approve_appoint']" position="after">
                    <button name="button_in_consultation" class="oe_highlight" string="In Consultation"
                            title="Click to Consultation this appointment"
                            groups="wk_appointment.appointment_appointee_group"
                            type="object"
                            attrs="{'invisible': ['|',('appoint_state', 'in',['new', 'pending', 'in_consultation', 'rejected','done']),('id','=',False)]}"/>
                    <button name="button_create_prescription" class="oe_highlight" string="Create Prescription"
                            title="Click to Create Prescription this appointment"
                            groups="wk_appointment.appointment_appointee_group"
                            type="object"
                            attrs="{'invisible': ['|',('appoint_state', 'in',['new', 'pending', 'approved', 'rejected','done']),('id','=',False)]}"/>
                </xpath>
                <xpath expr="//header/field[@name='appoint_state']" position="attributes">
                    <attribute name="statusbar_visible">new,pending,approved,in_consultation</attribute>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                    <field name="prescription_count" invisible="1"/>
                    <button
                            name="view_prescription" type="object"
                            icon="fa-eye"
                            class="oe_stat_button oe_center"
                            string="View Prescription"
                            attrs="{'invisible': [('prescription_count', '=', 0)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>