<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <template id="my_account_menu_template" inherit_id="wk_website_appointment.portal_my_appointments">
            <xpath expr="//tr[@class='clickable-row my_appointments_row']/td[6]" position="inside">
                <div t-if="appoint.appoint_state == 'in_consultation'" class="badge bg-info">
                    <i class="fa fa-clock-o"/>
                    <span t-esc="appoint.appoint_state" style="font-size:12px; text-transform: capitalize;"/>
                </div>
            </xpath>
        </template>


        <template id="portal_my_appointments_page_inherit" inherit_id="wk_website_appointment.portal_my_appointments_page">
            <xpath expr="//h4/t[4]" position="after">
                <t t-if="status=='in_consultation'">
                    <span class="badge bg-info">
                        <i class="fa fa-clock-o"/>
                        In Consultation
                    </span>
                </t>
            </xpath>
        </template>

    </data>
</odoo>